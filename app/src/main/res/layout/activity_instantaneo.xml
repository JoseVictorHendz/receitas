<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstantaneoActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Macarrão Instantaneo"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:srcCompat="@drawable/macarraoacarbonara"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="59dp" />

            <Button
                android:id="@+id/macarraocarbonaraBtn"
                android:layout_width="298dp"
                android:layout_height="90dp"
                android:text="À Carbonara"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="160dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="115dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/macarraosalsicha"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="160dp"
                tools:srcCompat="@drawable/macarraosalsicha" />

            <Button
                android:id="@+id/macarraoSalsichaBtn"
                android:layout_width="298dp"
                android:layout_height="90dp"
                android:text="Salsicha e tomate"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="259dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/macarraolegumes"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="61dp"
                tools:srcCompat="@drawable/macarraolegumes" />

            <Button
                android:id="@+id/macarraoLegumesBtn"
                android:layout_width="298dp"
                android:layout_height="90dp"
                android:text="Legumes"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="61dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="87dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/macarraosardinha"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="259dp"
                tools:srcCompat="@drawable/macarraosardinha" />

            <Button
                android:id="@+id/macarraoSardinhasBtn"
                android:layout_width="298dp"
                android:layout_height="90dp"
                android:text="Sardinhas"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="160dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="115dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/macarroalhoeoleo"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="160dp"
                tools:srcCompat="@drawable/macarroalhoeoleo" />

            <Button
                android:id="@+id/macarraoAlhoOlhoBtn"
                android:layout_width="298dp"
                android:layout_height="90dp"
                android:text="Alho e ólheo"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="259dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>